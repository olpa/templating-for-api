{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "TplfaDocument",
  "title": "TplfaDocument",
  "$ref": "#/definitions/TplfaDocument",
  "definitions": {

    "TplfaDocument": {
      "type": "object",
      "required": ["doc"],
      "properties": {
        "doc": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TplfaMarkdownNode"
          }
        }
      }
    },

    "TplfaMarkdownNode": {
      "type": "object",
      "required": ["type", "content"],
      "properties": {
        "type": {
          "const": "markdown"
        },
        "doc": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TplfaTextNode"
          }
        }
      }
    },

    "TplfaTextNode": {
      "type": "object",
      "required": ["type", "text"],
      "properties": {
        "type": {
          "const": "text"
        },
        "text": {
          "type": "string"
        }
      }
    }
  }
}
